<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="3dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_background_button_shadow" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/color_background_button_shadow"
                android:width="1dp" />
            <solid android:color="@color/md_green_800" />
            <corners android:radius="32dp" />
            <padding
                android:left="16dp"
                android:right="16dp" />
        </shape>
    </item>
</layer-list>

