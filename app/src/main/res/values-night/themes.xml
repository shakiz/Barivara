<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_green_100</item>
        <item name="colorPrimaryDark">@color/md_green_200</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Primary button -->
    <style name="BariVara.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">52dp</item>
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="elevation">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/md_white_1000</item>
        <item name="shapeAppearance">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@null</item>
    </style>

    <!-- Primary button -->
    <style name="BariVara.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">52dp</item>
        <item name="android:background">@drawable/background_button_secondary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/md_green_800</item>
        <item name="elevation">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/md_white_1000</item>
        <item name="shapeAppearance">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@null</item>
    </style>
</resources>
