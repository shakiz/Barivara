<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000"
        android:clickable="true"
        card_view:cardElevation="4dp"
        android:translationZ="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:ignore="NamespaceTypo"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        android:focusable="true">

        <!--   Recycler View Item Row   -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:weightSum="8">

                <RelativeLayout
                    android:id="@+id/callLayout"
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginLeft="8dp"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/callIcon"
                        android:src="@drawable/ic_call"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="4dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="6.6"
                    android:padding="4dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/rectangle_border_light_green">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tenant_name"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:textColor="@color/md_grey_800"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:textColor="@color/md_grey_800"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/TenantName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/demo_tenant_name"
                            android:layout_gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:gravity="center|left"
                            android:textColor="@color/md_grey_800"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center|left"
                        android:layout_marginTop="4dp"
                        android:gravity="center|left"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/rectangle_border_light_green">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/month_name"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:textColor="@color/md_blue_800"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/md_blue_800"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/StartingMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/demo_month"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:textStyle="bold"
                            android:textColor="@color/md_blue_800"
                            android:textSize="14sp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/rectangle_border_light_green">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="@string/room_name"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:scrollHorizontally="true"
                            android:textColor="@color/md_grey_800"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text=":"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:scrollHorizontally="true"
                            android:textColor="@color/md_grey_800"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/AssociateRoom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="@string/demo_room_name"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:scrollHorizontally="true"
                            android:textColor="@color/md_orange_800"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>