<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000"
    android:clickable="true"
    card_view:cardElevation="2dp"
    android:translationZ="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:ignore="NamespaceTypo"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true"
    android:focusable="true">

    <!--   Recycler View Item Row   -->
    <RelativeLayout
        android:id="@+id/activeColorIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/md_red_400"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/basicDetailsLayout"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/md_white_1000"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:background="@drawable/rectangle_border_light_green"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="@string/tenant_name"
                        android:textColor="@color/md_grey_800"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center|left"
                        android:text=":"
                        android:textColor="@color/md_grey_800"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/TenantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text="@string/demo_tenant_name"
                        android:textColor="@color/md_grey_800"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rectangle_border_light_green"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="@string/month_name"
                        android:textColor="@color/md_blue_800"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center|left"
                        android:text=":"
                        android:textColor="@color/md_blue_800"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/StartingMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center|left"
                        android:text="@string/demo_month"
                        android:textColor="@color/md_blue_800"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rectangle_border_light_green"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:scrollHorizontally="true"
                        android:text="@string/room_name"
                        android:textColor="@color/md_grey_800"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:scrollHorizontally="true"
                        android:text=":"
                        android:textColor="@color/md_grey_800"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/AssociateRoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:scrollHorizontally="true"
                        android:text="@string/demo_room_name"
                        android:textColor="@color/md_orange_800"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rectangle_border_light_green"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:scrollHorizontally="true"
                        android:text="@string/tenant_type"
                        android:textColor="@color/md_grey_800"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:scrollHorizontally="true"
                        android:text=":"
                        android:textColor="@color/md_grey_800"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/TenantTypeStr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:scrollHorizontally="true"
                        android:text="@string/demo_room_name"
                        android:textColor="@color/md_orange_800"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/callIcon"
                    android:layout_width="42dp"
                    android:layout_height="36dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    card_view:tint="@color/md_green_800"
                    android:src="@drawable/ic_call_white"/>

                <ImageView
                    android:id="@+id/messageIcon"
                    android:layout_width="42dp"
                    android:layout_height="36dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    card_view:tint="@color/md_green_800"
                    android:src="@drawable/ic_message_black_24dp"/>

                <ImageView
                    android:id="@+id/editIcon"
                    android:layout_width="42dp"
                    android:layout_height="36dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    card_view:tint="@color/md_green_800"
                    android:src="@drawable/ic_baseline_edit_24"/>

                <ImageView
                    android:id="@+id/deleteIcon"
                    android:layout_width="42dp"
                    android:layout_height="36dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    card_view:tint="@color/md_red_400"
                    android:src="@drawable/ic_delete_circle_black_24dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>