<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000"
        android:clickable="true"
        card_view:cardElevation="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:ignore="NamespaceTypo"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true"
        android:focusable="true">

        <!--   Recycler View Item Row   -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/detailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:weightSum="8">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/listCount"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:scaleType="centerInside"
                        android:text="1"
                        android:textColor="@color/md_grey_800"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/green_circle_filled_light"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="6.6"
                    android:padding="4dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/rectangle_border_light_green"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/room_name"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:textColor="@color/md_grey_800"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/md_grey_800"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/roomName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/demo_room_name"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:textStyle="bold"
                            android:textColor="@color/md_grey_800"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/rectangle_border_light_green"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/room_owner"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:textColor="@color/md_grey_800"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/md_grey_800"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/roomOwner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:maxLines="1"
                            android:scrollHorizontally="true"
                            android:text="@string/demo_room_owner_name"
                            android:textStyle="bold"
                            android:textColor="@color/md_grey_800"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/rectangle_border_light_green"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/start_rent_month"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:textColor="@color/md_grey_800"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/md_grey_800"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/startMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/demo_month"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:textStyle="bold"
                            android:textColor="@color/md_blue_800"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <include
                layout="@layout/adapter_recycler_all_bottom_actions"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@id/detailsLayout" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>