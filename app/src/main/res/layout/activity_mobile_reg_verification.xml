<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="4dp">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_white_1000"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/afterChangePasswordLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="288dp"
                    android:src="@drawable/forgot_password_email_sent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/check_your_email"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/md_green_800"
                    android:focusable="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/we_have_sent_password_reset_mail"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_check"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/md_green_800"
                    android:focusable="true" />

                <Button
                    android:id="@+id/login"
                    android:layout_width="200dp"
                    android:layout_height="42dp"
                    android:layout_margin="16dp"
                    android:text="@string/go_back_login"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:backgroundTint="@null"
                    android:clickable="true"
                    android:textColor="@color/md_white_1000"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:background="@drawable/button_shape_round_corner"
                    android:focusable="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/changePasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="288dp"
                    android:src="@drawable/forgot_password"/>

                <TextView
                    android:id="@+id/sentCodeHintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sent_you_code_on_your_number"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_green_800"
                    android:focusable="true" />

                <RelativeLayout
                    android:id="@+id/verificationCodeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp">

                    <LinearLayout
                        android:layout_below="@+id/verificationCodeText"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:padding="4dp"
                        android:background="@drawable/profile_text_bg"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/verificationCode"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:background="@null"
                            android:layout_marginStart="16dp"
                            android:inputType="numberSigned"
                            android:hint="@string/type_code_here"
                            android:padding="4dp"
                            android:textColor="@color/md_grey_700"
                            android:textColorHighlight="@color/md_grey_700"
                            android:textColorHint="@color/md_grey_700"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/verificationCodeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginBottom="-10dp"
                        android:layout_alignParentTop="true"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="@string/verification_code"
                        android:background="@color/md_white_1000"
                        android:textColor="@color/md_grey_800"
                        android:textSize="14sp" />

                </RelativeLayout>

                <Button
                    android:id="@+id/verify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/verify"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAllCaps="false"
                    style="@style/BariVara.Button.Primary" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
